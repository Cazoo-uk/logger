{
  "compilerOptions": {
    "lib": ["es2017"],
    "module": "commonjs",
    "target": "es2017",
    "declaration": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "baseUrl": "./",
    "paths": {
      "*": ["local-types/*", "node_modules/@types/*"]
    },
    "typeRoots": ["node_modules/@types"]
  },
  "exclude": ["node_modules", "dist", "test"]
}
